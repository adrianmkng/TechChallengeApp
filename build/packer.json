{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "version": "",
    "app_file": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-*",
          "root-device-type": "ebs"
        },
        "owners": ["137112412989"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "techchallenge-{{user `version`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /app",
        "sudo chown ec2-user:ec2-user /app"
      ]
    },
    {
      "type": "file",
      "source": "output/{{ user `app_file` }}",
      "destination": "/app/techchallenge.zip"
    },
    {
      "type": "file",
      "source": "build/techchallenge.service",
      "destination": "/app/techchallenge.service"
    },
    {
      "type": "shell",
      "inline": [
        "cd /app",
        "sudo mv techchallenge.service /etc/systemd/system/",
        "tar -zxf techchallenge.zip"
      ]
    }
  ]
}
